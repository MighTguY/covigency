{
  "manifest_version": 3,
  "name": "Covigency - Vaccine Finder App",
  "short_name": "Covigency V-Finder",
  "author": "Lucky Sharma",
  "description": "Find slots for vaccine on Cowin website and book that for you",
  "version": "1.1.0",
  "icons": {
    "16": "assets/CV16.png",
    "32": "assets/CV32.png",
    "48": "assets/CV48.png",
    "128": "assets/CV128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/CV16.png",
      "32": "assets/CV32.png",
      "48": "assets/CV48.png",
      "128": "assets/CV128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://selfregistration.cowin.gov.in/*",
        "https://www.cowin.gov.in/home"
      ],
      "js": ["js/jquery.min.js", "js/slot-booking.js"]
    }
  ],
  "browser_action": {
    "default_title": "Covigency Vaccine Finder",
    "default_icon": "assets/CV48.png",
    "default_popup": "views/popup.html"
  },
  "permissions": ["activeTab", "storage", "https://www.cowin.gov.in/*"]
}
